@using Web.Resources.Home
@using Web.Resources.Product
@{
    ViewBag.Title = "PostDetails";
    Layout = "~/Views/Shared/_LayoutClient.cshtml";
}
@{
    string day = Model.CreatedDate.Day.ToString();
    string month = Model.CreatedDate.ToString("MMM");
    string year = Model.CreatedDate.Year.ToString();
}

<style>
    .post-details {
        padding: 30px;
        background: #f8f8f8;
    }
</style>

<div style="margin-top: 50px;">
    <!-- breadcrumb -->
    <div class="container">
        <hr />
        <div class="bread-crumb flex-w p-r-15 p-lr-0-lg">
            <a href="/" class="stext-109 cl8 hov-cl1 trans-04">
                @re_Home.Home
                <i class="fa fa-angle-right m-l-9 m-r-10" aria-hidden="true"></i>
            </a>

            <a href="/category-news" class="stext-109 cl8 hov-cl1 trans-04">
                @re_Home.Blog
                <i class="fa fa-angle-right m-l-9 m-r-10" aria-hidden="true"></i>
            </a>

            <span class="stext-109 text-primary">
                @Model.Name
            </span>
        </div>
        <hr />
    </div>

    <!-- Content page -->
    <section class="bg0 p-t-30 p-b-20" ng-controller="PostController">
        <div class="container">
            <div class="row">
                <div class="col-md-12 col-lg-12 p-b-80">
                    <div class="p-r-45 p-r-0-lg">
                        <h4 class="ltext-102 cl2 p-b-28">
                            @Model.Name
                        </h4>
                        <!--  -->
                        <div class="post-details">
                            <div class="wrap-pic-w how-pos5-parent">
                                <img src="@Model.Image" alt="IMG-BLOG">

                                <div class="flex-col-c-m size-123 bg9 how-pos5">
                                    <span class="ltext-107 cl2 txt-center">
                                        @day
                                    </span>

                                    <span class="stext-109 cl3 txt-center">
                                        @month @year
                                    </span>
                                </div>
                            </div>

                            <div class="p-t-20">
                                <p class="stext-117 cl6 p-b-26">
                                    @Html.Raw(Model.Content)
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>


