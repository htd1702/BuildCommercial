@using Web.Resources.ShopingCart
@using Web.Resources.Product
@using Web.Resources.Home
@using System.Data
@{
    ViewBag.Title = re_ShopingCart.ThankYou + re_Home.LinkTile;
    Layout = "~/Views/Shared/_LayoutClient.cshtml";
}
<style>
    .how-itemcart-detauls {
        width: 60px;
        position: relative;
        margin-right: 20px;
    }

        .how-itemcart-detauls img {
            width: 100%;
        }
</style>
<form class="bg0 p-t-75 p-b-85">
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <h4 class="mtext-109 cl2 p-b-30">
                    @re_ShopingCart.ThankYou
                </h4>

                <div class="flex-w flex-t bor12 p-b-13">
                    <div>
                        <span class="stext-110 cl2">
                            <span>
                                @re_ShopingCart.OrderSuccess
                            </span>
                            <br />
                            <span>
                                @re_Product.Code:@if (int.Parse(ViewBag.ID) < 10)
                                {
                                    string index = "#0000" + ViewBag.ID;
                                    <span>@index</span>
                                }
                                else if (int.Parse(ViewBag.ID) < 100)
                                {
                                    string index = "#000" + ViewBag.ID;
                                    <span>@index</span>
                                }
                                else if (int.Parse(ViewBag.ID) < 1000)
                                {
                                    string index = "#00" + ViewBag.ID;
                                    <span>@index</span>
                                }
                                else if (int.Parse(ViewBag.ID) < 10000)
                                {
                                    string index = "#0" + ViewBag.ID;
                                    <span>@index</span>
                                }
                                else if (int.Parse(ViewBag.ID) < 100000)
                                {
                                    string index = "#" + ViewBag.ID;
                                    <span>@index</span>
                                }
                            </span>
                            <br />
                            <span>
                                @re_ShopingCart.ThankYouForYourPurchase
                            </span>
                        </span>
                    </div>
                </div>

                <div class="flex-w flex-t p-t-15 p-b-30">
                    <div style="width:100%;">
                        <p class="stext-111 cl6 p-t-2">
                            @re_ShopingCart.OrderInformation
                        </p>

                        <div class="p-t-15" style="border:1px solid #d9d9d9;padding:20px;">
                            <table>
                                <tr>
                                    <td>@re_ShopingCart.wName: @ViewBag.CustomerName</td>
                                </tr>
                                <tr>
                                    <td>@re_ShopingCart.wEmail: @ViewBag.Email</td>
                                </tr>
                                <tr>
                                    <td>@re_ShopingCart.wAddress: @ViewBag.Address</td>
                                </tr>
                                <tr>
                                    <td>@re_ShopingCart.wPhone: @ViewBag.Phone</td>
                                </tr>
                                <tr>
                                    <td>@re_ShopingCart.wDescription: @ViewBag.CustomerMessage</td>
                                </tr>
                                <tr>
                                    <td><br /></td>
                                </tr>
                                <tr>
                                    <td>@re_ShopingCart.PaymentMethods</td>
                                </tr>
                                <tr>
                                    <td>
                                        @if (ViewBag.PaymentMethod == "Payment on delivery")
                                        {
                                            @re_ShopingCart.PaymentOnDelivery
                                        }
                                        else
                                        {
                                            @re_ShopingCart.BankTransfer
                                        }
                                    </td>
                                </tr>
                            </table>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-6">
                <div class="flex-w flex-t p-t-15 p-b-30">
                    <div style="width:100%;">
                        <table style="width:100%;">
                            <thead>
                                <tr>
                                    <th>
                                        @re_Product.Name
                                    </th>
                                    <th></th>
                                    <th>@re_Product.Quantity</th>
                                    <th>@re_Product.PromotionPrice</th>
                                    <th>@re_Product.Price</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (DataRow row in ViewBag.ListOrders)
                                {
                                    <tr style="height: 100px;">
                                        <td style="width:10%;">
                                            <div class="how-itemcart-detauls">
                                                <img src="@row["Image"].ToString()" alt="IMG">
                                            </div>
                                        </td>
                                        <td style="width:30%">
                                            @if (Request.Cookies["Lang"] != null && Request.Cookies["Lang"].Value == "vi")
                                            {
                                                <span class="spanNameProduct">@row["ProductNameVN"].ToString()</span>
                                            }
                                            else if (Request.Cookies["Lang"] != null && Request.Cookies["Lang"].Value == "fr")
                                            {
                                                <span class="spanNameProduct">@row["ProductNameFr"].ToString()</span>
                                            }
                                            else
                                            {
                                                <span class="spanNameProduct">@row["ProductName"].ToString()</span>
                                            }
                                            <br />
                                            <span class="spanSizeColor">@row["ColorName"].ToString(), @row["SizeName"].ToString()</span>
                                        </td>
                                        <td style="width:20%">
                                            x @row["Quantitty"].ToString()
                                        </td>
                                        <td style="width:30%">
                                            @row["PromotionPrice"].ToString()%
                                        </td>
                                        <td>
                                            @if (Request.Cookies["Lang"] != null && Request.Cookies["Lang"].Value == "vi")
                                            {
                                                <span class="spanPrice" data-price="@row["PriceVN"].ToString()">@Html.FormatValue((int.Parse(row["PriceVN"].ToString()) * int.Parse(row["Quantitty"].ToString())).ToString(), "{0:C}")</span>
                                            }
                                            else if (Request.Cookies["Lang"] != null && Request.Cookies["Lang"].Value == "fr")
                                            {
                                                <span class="spanPrice" data-price="@row["PriceFr"].ToString()">$@string.Format("{0:#,##0.00}", (int.Parse(row["PriceFr"].ToString()) * int.Parse(row["Quantitty"].ToString())).ToString())</span>
                                            }
                                            else
                                            {
                                                <span class="spanPrice" data-price="@row["Price"].ToString()">$@string.Format("{0:#,##0.00}", (int.Parse(row["Price"].ToString()) * int.Parse(row["Quantitty"].ToString())).ToString())</span>
                                            }
                                        </td>
                                    </tr>
                                }
                                <tr>
                                    <td colspan="4"><hr /></td>
                                </tr>
                                <tr>
                                    <td colspan="4">
                                        <span class="pull-right">
                                            @if (Request.Cookies["Lang"] != null && Request.Cookies["Lang"].Value == "vi")
                                            {
                                                <b>Total:</b> <span id="spanTotal">@Html.FormatValue(ViewBag.TotalVN, "{0:C}")</span>
                                            }
                                            else if (Request.Cookies["Lang"] != null && Request.Cookies["Lang"].Value == "fr")
                                            {
                                                <b>Total:</b> <span id="spanTotal">$@string.Format("{0:#,##0.00}", ViewBag.Total)</span>
                                            }
                                            else
                                            {
                                                <b>Total:</b> <span id="spanTotal">$@string.Format("{0:#,##0.00}", ViewBag.Total)</span>
                                            }
                                        </span>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

            <div class="text-center m-auto">
                <a href="/" class="flex-c-m stext-101 cl0 size-102 bor19 bg1 p-lr-15 trans-04 js-addcart-detail btn-success">
                    Go to home page
                </a>
            </div>
        </div>
    </div>
</form>
