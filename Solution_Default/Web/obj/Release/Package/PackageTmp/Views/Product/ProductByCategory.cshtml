@using Web.Resources.Home
@using Web.Resources.Product
@{
    ViewBag.Title = "ProductByCategory";
    Layout = "~/Views/Shared/_LayoutClient.cshtml";
}

<style>
    #page_ProductCategory {
        margin-top: 50px;
    }

    .active {
        background-color: grey;
        color: white;
    }

    .bor18:last-child {
        border-bottom: none !important;
    }
</style>

<section class="section-main" id="page_ProductCategory" ng-controller="ProductCategoryController">
    <div class="container">
        <hr />
        <a href="/" class="stext-109 cl8 hov-cl1 trans-04">
            @re_Home.Home
            <i class="fa fa-angle-right m-l-9 m-r-10" aria-hidden="true"></i>
        </a>

        <a class="stext-109 cl8 hov-cl1 trans-04">
            @re_Product.Category
            <i class="fa fa-angle-right m-l-9 m-r-10" aria-hidden="true"></i>
        </a>

        <a class="stext-109 cl8 hov-cl1 trans-04">
            @ViewBag.Name
        </a>
        <hr />
    </div>
    <section class="bg0 p-t-30 p-b-20">
        <div class="container">
            <div class="row">
                <div class="col-md-4 col-lg-3 p-b-80">
                    <div class="bor17 of-hidden pos-relative">
                        <input class="stext-103 cl2 plh4 size-116 p-l-28 p-r-55" type="text" name="search" placeholder="Search" id="txt_KeywordProductCategory">

                        <button class="flex-c-m size-122 ab-t-r fs-18 cl4 hov-cl1 trans-04">
                            <i class="zmdi zmdi-search"></i>
                        </button>
                    </div>

                    <div class="m-t-20">
                        <h4 class="mtext-112 cl2 p-b-20" ng-show="@ViewBag.ParentID == 0">
                            @re_Home.Categories
                        </h4>

                        <div class='sub-menu-vertical'>
                            <ul ng-if="childParent.ParentID != 0" ng-repeat="childParent in childCategory | orderBy : CreatedDate">
                                <li>
                                    <a href="" ng-click="btnParent(childParent.ID, childParent.ParentID)">
                                        {{childParent.Name}}
                                    </a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
                <div class="col-md-8 col-lg-9 p-b-80">
                    <div class="row product-grid">
                        <div class="col-xs-6 col-sm-3 col-md-3" ng-repeat="p in productCategories | offset: currentPage*itemsPerPage | limitTo: itemsPerPage" pagin-directive="ngRepeatFinished">
                            <div class="block2-pic hov-img0">
                                <img ng-src="{{p.Image}}" alt="IMG-PRODUCT">
                                <a href="/product-details/{{p.ID}}" data-id="{{p.ID}}" class="block2-btn flex-c-m stext-103 cl2 size-102 bg0 bor2 hov-btn1 p-lr-15 trans-04 js-show-modal">
                                    @re_Home.QuickView
                                </a>
                                <span ng-show="p.PromotionPrice > 0" class="sale-main">{{p.PromotionPrice}}%</span>
                            </div>
                            <div class="block2-txt flex-w flex-t p-t-14" style="margin-bottom:40px;">
                                <div class="block2-txt-child1 flex-col-l">

                                    @if (Request.Cookies["Lang"] != null && Request.Cookies["Lang"].Value == "vi")
                                    {
                                        <a href="/product-details/{{p.ID}}" class="stext-104 cl4 hov-cl1 trans-04 js-name-b2 p-b-6">
                                            {{p.NameVN}}
                                        </a>

                                        <span class="stext-105 cl3" ng-show="p.PromotionPrice > 0">
                                            <span style="text-decoration:line-through">{{p.PriceVN | currency:"":0}} vnđ</span> - {{(p.PriceVN - (p.PriceVN * p.PromotionPrice)/100) | currency:"":0}} vnđ
                                        </span>

                                        <span class="stext-105 cl3" ng-show="p.PromotionPrice < 1">
                                            {{p.PriceVN | currency:"":0}} vnđ
                                        </span>
                                    }
                                    else
                                    {
                                        <a href="/product-details/{{p.ID}}" class="stext-104 cl4 hov-cl1 trans-04 js-name-b2 p-b-6">
                                            {{p.Name}}
                                        </a>

                                        <span class="stext-105 cl3" ng-show="p.PromotionPrice > 0">
                                            <span style="text-decoration:line-through">{{p.Price | currency}}</span> - {{(p.Price - (p.Price * p.PromotionPrice)/100) | currency}}
                                        </span>

                                        <span class="stext-105 cl3" ng-show="p.PromotionPrice < 1">
                                            {{p.Price | currency}}
                                        </span>
                                    }

                                </div>
                            </div>
                        </div>
                        <input style="display:none" type="text" value="@ViewBag.ID" id="txt_CategoryID" />
                        <input style="display:none" type="text" value="@ViewBag.ParentID" id="txt_ParentID" />
                    </div>

                    <div class="flex-c-m flex-w w-full p-t-38">
                        <a href class="flex-c-m how-pagination1 trans-04 m-all-7" ng-class="prevPageDisabled()" ng-click="prevPage()"><</a>

                        <a href class="flex-c-m how-pagination1 trans-04 m-all-7" ng-repeat="n in range()" ng-class="{active: n == currentPage}" ng-click="setPage(n)">{{n+1}}</a>

                        <a href class="flex-c-m how-pagination1 trans-04 m-all-7" ng-class="nextPageDisabled()" ng-click="nextPage()">></a>
                    </div>
                </div>
            </div>
        </div>
    </section>
</section>



