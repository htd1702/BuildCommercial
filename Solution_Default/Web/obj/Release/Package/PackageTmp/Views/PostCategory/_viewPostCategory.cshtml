@using Web.Resources.Home
@using Web.Resources.Product
@{
    ViewBag.Title = "_viewPostCategory";
    Layout = "~/Views/Shared/_LayoutClient.cshtml";
}

<div style="margin-top: 50px;">

    <div class="container">
        <hr />
        <div class="bread-crumb flex-w p-r-15 p-lr-0-lg">
            <a href="/" class="stext-109 cl8 hov-cl1 trans-04">
                @re_Home.Home
                <i class="fa fa-angle-right m-l-9 m-r-10" aria-hidden="true"></i>
            </a>

            <a href="/category-news" class="stext-109 text-primary hov-cl1 trans-04">
                @re_Home.Blog
            </a>
        </div>
        <hr />
    </div>

    <section class="bg0 p-t-20 p-b-60" ng-controller="PostController">
        <div class="container">
            <div class="row">
                @foreach (var p in ViewBag.PostNews)
                {
                    string day = p.CreatedDate.Day.ToString();
                    string month = p.CreatedDate.ToString("MMM");
                    string year = p.CreatedDate.Year.ToString();
                    //html
                    <div class="col-md-6">
                        <a href="/post-detail/@p.ID" class="hov-img0 how-pos5-parent">
                            <img src="@p.Image" alt="IMG-BLOG">

                            <div class="flex-col-c-m size-123 bg9 how-pos5">
                                <span class="ltext-107 cl2 txt-center">
                                    @day
                                </span>

                                <span class="stext-109 cl3 txt-center">
                                    @month @year
                                </span>
                            </div>
                        </a>

                        <div class="p-t-32 p-b-50">
                            <h4 class="p-b-15 txt-center">
                                <a href="/post-detail/@p.ID" class="ltext-108 cl2 hov-cl1 trans-04">
                                    @p.Name
                                </a>
                            </h4>

                            <p class="stext-117 cl6">
                                @Html.Raw(p.Description)
                            </p>
                        </div>
                    </div>
                }
            </div>
            <hr />
            <div class="p-t-45 p-b-30">
                <h3 class="ltext-103 cl5 txt-center">
                    @re_Home.Featured
                </h3>
            </div>
            <div class="row product-grid" style="margin-top:30px;">
                <div class="col-xs-6 col-sm-3 col-md-3" ng-repeat="p in hotProductposts">
                    <div class="block2-pic hov-img0">
                        <img ng-src="{{p.Image}}" alt="IMG-PRODUCT">
                        <a href="/product-details/{{p.ID}}" data-id="{{p.ID}}" class="block2-btn flex-c-m stext-103 cl2 size-102 bg0 bor2 hov-btn1 p-lr-15 trans-04 js-show-modal">
                            @re_Home.QuickView
                        </a>
                        <span class="hot-product-icon">Hot</span>
                    </div>
                    <div class="block2-txt flex-w flex-t p-t-14" style="margin-bottom:40px;">
                        <div class="block2-txt-child1 flex-col-l">

                            @if (Request.Cookies["Lang"] != null && Request.Cookies["Lang"].Value == "vi")
                            {
                                <a href="/product-details/{{p.ID}}" class="stext-104 cl4 hov-cl1 trans-04 js-name-b2 p-b-6">
                                    {{p.NameVN}}
                                </a>

                                <span class="stext-105 cl3" ng-show="p.PromotionPrice > 0">
                                    <span style="text-decoration:line-through">{{p.PriceVN | currency:"":0}} vnđ</span> - <span style="color:red">{{(p.PriceVN - (p.PriceVN * p.PromotionPrice)/100) | currency:"":0}} vnđ</span>
                                </span>

                                <span class="stext-105 cl3" ng-show="p.PromotionPrice < 1">
                                    {{p.PriceVN | currency:"":0}} vnđ
                                </span>
                            }
                            else
                            {
                                <a href="/product-details/{{p.ID}}" class="stext-104 cl4 hov-cl1 trans-04 js-name-b2 p-b-6">
                                    {{p.Name}}
                                </a>

                                <span class="stext-105 cl3" ng-show="p.PromotionPrice > 0">
                                    <span style="text-decoration:line-through">{{p.Price | currency}}</span> - <span style="color:red">{{(p.Price - (p.Price * p.PromotionPrice)/100) | currency}}</span>
                                </span>

                                <span class="stext-105 cl3" ng-show="p.PromotionPrice < 1">
                                    {{p.Price | currency}}
                                </span>
                            }
                        </div>

                    </div>
                </div>
            </div>
            <hr />
            <div class="p-t-45 p-b-30">
                <h3 class="ltext-103 cl5 txt-center">
                    @re_Home.SaleProduct
                </h3>
            </div>
            <div class="row product-grid" style="margin-top:30px;">
                <div class="col-xs-6 col-sm-3 col-md-3" ng-repeat="p in saleProductPosts">
                    <div class="block2-pic hov-img0">
                        <img ng-src="{{p.Image}}" alt="IMG-PRODUCT">
                        <a href="/product-details/{{p.ID}}" data-id="{{p.ID}}" class="block2-btn flex-c-m stext-103 cl2 size-102 bg0 bor2 hov-btn1 p-lr-15 trans-04 js-show-modal">
                            @re_Home.QuickView
                        </a>
                        <span ng-show="p.PromotionPrice > 0" class="sale-main">{{p.PromotionPrice}}%</span>
                    </div>
                    <div class="block2-txt flex-w flex-t p-t-14" style="margin-bottom:40px;">
                        <div class="block2-txt-child1 flex-col-l">

                            @if (Request.Cookies["Lang"] != null && Request.Cookies["Lang"].Value == "vi")
                            {
                                <a href="/product-details/{{p.ID}}" class="stext-104 cl4 hov-cl1 trans-04 js-name-b2 p-b-6">
                                    {{p.NameVN}}
                                </a>

                                <span class="stext-105 cl3" ng-show="p.PromotionPrice > 0">
                                    <span style="text-decoration:line-through">{{p.PriceVN | currency:"":0}} vnđ</span> - <span style="color:red">{{(p.PriceVN - (p.PriceVN * p.PromotionPrice)/100) | currency:"":0}} vnđ</span>
                                </span>

                                <span class="stext-105 cl3" ng-show="p.PromotionPrice < 1">
                                    {{p.PriceVN | currency:"":0}} vnđ
                                </span>
                            }
                            else
                            {
                                <a href="/product-details/{{p.ID}}" class="stext-104 cl4 hov-cl1 trans-04 js-name-b2 p-b-6">
                                    {{p.Name}}
                                </a>

                                <span class="stext-105 cl3" ng-show="p.PromotionPrice > 0">
                                    <span style="text-decoration:line-through">{{p.Price | currency}}</span> - <span style="color:red">{{(p.Price - (p.Price * p.PromotionPrice)/100) | currency}}</span>
                                </span>

                                <span class="stext-105 cl3" ng-show="p.PromotionPrice < 1">
                                    {{p.Price | currency}}
                                </span>
                            }
                        </div>
                    </div>
                </div>
            </div>
            <hr />
            <div class="p-t-45 p-b-30">
                <h3 class="ltext-103 cl5 txt-center">
                    @re_Home.Sale
                </h3>
            </div>
            <div class="row" style="margin-top:30px;">
                @foreach (var p in ViewBag.PostPromotion)
                {
                    string day = p.CreatedDate.Day.ToString();
                    string month = p.CreatedDate.ToString("MMM");
                    string year = p.CreatedDate.Year.ToString();
                    //html
                    <div class="col-md-6">
                        <a href="/post-detail/@p.ID" class="hov-img0 how-pos5-parent">
                            <img src="@p.Image" alt="IMG-BLOG">

                            <div class="flex-col-c-m size-123 bg9 how-pos5">
                                <span class="ltext-107 cl2 txt-center">
                                    @day
                                </span>

                                <span class="stext-109 cl3 txt-center">
                                    @month @year
                                </span>
                            </div>
                        </a>

                        <div class="p-t-32 p-b-50">
                            <h4 class="p-b-15 txt-center">
                                <a href="/post-detail/@p.ID" class="ltext-108 cl2 hov-cl1 trans-04">
                                    @p.Name
                                </a>
                            </h4>

                            <p class="stext-117 cl6">
                                @Html.Raw(p.Description)
                            </p>
                        </div>
                    </div>
                }
            </div>
        </div>
    </section>
</div>

