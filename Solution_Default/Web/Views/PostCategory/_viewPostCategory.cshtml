@using Web.Resources.Home
@using Web.Resources.Product
@{
    ViewBag.Title = re_Home.Blog + re_Home.LinkTile;
    Layout = "~/Views/Shared/_LayoutClient.cshtml";
}

<div style="margin-top: 50px;">

    <div class="container">
        <hr />
        <div class="bread-crumb flex-w p-r-15 p-lr-0-lg">
            <a href="/" class="stext-109 cl8 hov-cl1 trans-04">
                @re_Home.Home
                <i class="fa fa-angle-right m-l-9 m-r-10" aria-hidden="true"></i>
            </a>

            <a href="/category-news" class="stext-109 text-primary hov-cl1 trans-04">
                @re_Home.Blog
            </a>
        </div>
        <hr />
    </div>

    <section class="bg0 p-t-20 p-b-60">
        <div class="container">
            <div class="row">
                @foreach (var p in ViewBag.PostNews)
                {
                    string day = p.CreatedDate.Day.ToString();
                    string month = p.CreatedDate.ToString("MMM");
                    string year = p.CreatedDate.Year.ToString();
                    //html
                    <div class="col-md-6">
                        <a href="/post-detail/@p.ID" class="hov-img0 how-pos5-parent">
                            <img src="@p.Image" alt="IMG-BLOG">

                            <div class="flex-col-c-m size-123 bg9 how-pos5">
                                <span class="ltext-107 cl2 txt-center">
                                    @day
                                </span>

                                <span class="stext-109 cl3 txt-center">
                                    @month @year
                                </span>
                            </div>
                        </a>

                        <div class="p-t-32 p-b-50">
                            <h4 class="p-b-15 txt-center">
                                <a href="/post-detail/@p.ID" class="ltext-108 cl2 hov-cl1 trans-04">

                                    @if (Request.Cookies["Lang"] != null && Request.Cookies["Lang"].Value == "vi")
                                    {
                                        @p.NameVN
                                    }
                                    else if (Request.Cookies["Lang"] != null && Request.Cookies["Lang"].Value == "fr")
                                    {
                                        @p.NameFr
                                    }
                                    else
                                    {
                                        @p.Name
                                    }
                                </a>
                            </h4>

                            <p class="stext-117 cl6">
                                @if (Request.Cookies["Lang"] != null && Request.Cookies["Lang"].Value == "vi")
                                {
                                    @Html.Raw(p.DescriptionVN)
                                }
                                else if (Request.Cookies["Lang"] != null && Request.Cookies["Lang"].Value == "fr")
                                {
                                    @Html.Raw(p.DescriptionFr)
                                }
                                else
                                {
                                    @Html.Raw(p.Description)
                                }
                            </p>
                        </div>
                    </div>
                }
            </div>
            <hr />
            @{Html.RenderAction("HotProductOverView", "Product");}
            <hr />
            @{Html.RenderAction("SaleProductOverView", "Product");}
            <hr />
            <div class="p-t-45 p-b-30">
                <h3 class="ltext-103 cl5 txt-center">
                    @re_Home.Sale
                </h3>
            </div>
            <div class="row" style="margin-top:30px;">
                @foreach (var p in ViewBag.PostPromotion)
                {
                    string day = p.CreatedDate.Day.ToString();
                    string month = p.CreatedDate.ToString("MMM");
                    string year = p.CreatedDate.Year.ToString();
                    //html
                    <div class="col-md-6">
                        <a href="/post-detail/@p.ID" class="hov-img0 how-pos5-parent">
                            <img src="@p.Image" alt="IMG-BLOG">

                            <div class="flex-col-c-m size-123 bg9 how-pos5">
                                <span class="ltext-107 cl2 txt-center">
                                    @day
                                </span>

                                <span class="stext-109 cl3 txt-center">
                                    @month @year
                                </span>
                            </div>
                        </a>

                        <div class="p-t-32 p-b-50">
                            <h4 class="p-b-15 txt-center">
                                <a href="/post-detail/@p.ID" class="ltext-108 cl2 hov-cl1 trans-04">
                                    @if (Request.Cookies["Lang"] != null && Request.Cookies["Lang"].Value == "vi")
                                    {
                                        @p.NameVN
                                    }
                                    else if (Request.Cookies["Lang"] != null && Request.Cookies["Lang"].Value == "fr")
                                    {
                                        @p.NameFr
                                    }
                                    else
                                    {
                                        @p.Name
                                    }
                                </a>
                            </h4>

                            <p class="stext-117 cl6">
                                @if (Request.Cookies["Lang"] != null && Request.Cookies["Lang"].Value == "vi")
                                {
                                    @Html.Raw(p.DescriptionVN)
                                }
                                else if (Request.Cookies["Lang"] != null && Request.Cookies["Lang"].Value == "fr")
                                {
                                    @Html.Raw(p.DescriptionFr)
                                }
                                else
                                {
                                    @Html.Raw(p.Description)
                                }
                            </p>
                        </div>
                    </div>
                }
            </div>
        </div>
    </section>
</div>