        <div class="p-b-10">
            <h3 class="ltext-103 cl5">
                @re_Home.ProductNew
            </h3>
        </div>

        <div class="flex-w flex-sb-m p-b-20">
            <div class="flex-w flex-l-m filter-tope-group m-tb-10">
                @foreach (var item in ViewBag.Parent)
                {
                    if (Request.Cookies["Lang"] != null && Request.Cookies["Lang"].Value == "vi")
                    {
                        <button class="stext-106 cl6 hov1 bor3 trans-04 m-r-32 m-tb-5 btnParentNew" data-filter=".new-@item.Alias">
                            @item.NameVN
                        </button>
                    }
                    else if (Request.Cookies["Lang"] != null && Request.Cookies["Lang"].Value == "fr")
                    {
                        <button class="stext-106 cl6 hov1 bor3 trans-04 m-r-32 m-tb-5 btnParentNew" data-filter=".new-@item.Alias">
                            @item.NameFr
                        </button>
                    }
                    else
                    {
                        <button class="stext-106 cl6 hov1 bor3 trans-04 m-r-32 m-tb-5 btnParentNew" data-filter=".new-@item.Alias">
                            @item.Name
                        </button>
                    }
                }
            </div>
        </div>
