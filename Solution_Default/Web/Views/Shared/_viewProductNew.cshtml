                                @re_Home.QuickView
                            </a>
                        </div>
                        <div class="block2-txt flex-w flex-t p-t-14" style="margin-bottom:40px;">
                            <div class="block2-txt-child1 flex-col-l">

                                @if (Request.Cookies["Lang"] != null && Request.Cookies["Lang"].Value == "vi")
                                {
                                    <a href="/product-details/@row["ID"].ToString()" class="stext-104 cl4 hov-cl1 trans-04 js-name-b2 p-b-6">
                                        @row["NameVN"].ToString()
                                    </a>

                                    if (int.Parse(row["PromotionPrice"].ToString()) > 0)
                                    {
                                        <span class="stext-105 cl3">
                                            <span style="text-decoration:line-through">@string.Format("{0:#,##0}", double.Parse(row["PriceVN"].ToString()))</span> - <span style="color:red">@string.Format("{0:#,##0}", double.Parse(row["PriceVN"].ToString()) - (double.Parse(row["PriceVN"].ToString()) * int.Parse(row["PromotionPrice"].ToString())) / 100) đ</span>
                                        </span>
                                    }
                                    else
                                    {
