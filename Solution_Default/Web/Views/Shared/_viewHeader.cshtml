                            {
                                <script type="text/ng-template" id="treeMenuHeard">
                                    <a href="/Product/ProductByCategory/?name={{parent.NameVN}}&parentID={{parent.ParentID}}&id={{parent.ID}}">{{parent.NameVN}}</a>
                                    <ul class="sub-menu" ng-if="(parentCategory | filter:{ParentID : parent.ID}).length > 0">
                                        <li style="font-size:15px" class="active-menu" ng-repeat="parent in parentCategory | filter:{ParentID : parent.ID} : true" ng-include="'treeMenuHeard'"></li>
                                    </ul>
                                </script>
                                <ul class="sub-menu">
                                    <li style="font-size:18px" ng-repeat="parent in parentCategory" ng-if="parent.ParentID == 0" ng-include="'treeMenuHeard'"></li>
                                </ul>
                            }
                            else
                            {
                                <script type="text/ng-template" id="treeMenuHeard">
                                    <a href="/Product/ProductByCategory/?name={{parent.NameVN}}&parentID={{parent.ParentID}}&id={{parent.ID}}">{{parent.Name}}</a>
                                    <ul class="sub-menu" ng-if="(parentCategory | filter:{ParentID : parent.ID}).length > 0">
                                        <li class="active-menu" ng-repeat="parent in parentCategory | filter:{ParentID : parent.ID} : true" ng-include="'treeMenuHeard'"></li>
                                    </ul>
                                </script>
                                <ul class="sub-menu">
                                    <li ng-repeat="parent in parentCategory" ng-if="parent.ParentID == 0" ng-include="'treeMenuHeard'"></li>
                                </ul>
                            }
