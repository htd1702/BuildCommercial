<div ng-controller="ProductController">
    <div class="flex-w flex-sb-m p-b-52">
        <div class="flex-w flex-l-m filter-tope-group m-tb-10">
            <ul class="child-menu">
                @{
                    if (Request.Cookies["Lang"] != null && Request.Cookies["Lang"].Value == "vi")
                    {
                        <li ng-repeat="parent in parentCategory" ng-if="parent.ParentID == 0">
                            <a class="hov1 stext-106 m-r-20" style="font-size:18px;" name="btnParent" ng-click="btnParent(parent.ID, parent.ParentID)" data-category="{{parent.ID}}" data-parent="{{parent.ParentID}}">{{parent.NameVN}}</a>
                            <ul class="sub-menu">
                                <li class="active-menu" ng-repeat="childParent in parentCategory" ng-if="childParent.ParentID==parent.ID">
                                    <a class="hov1 stext-106 m-r-20" style="font-size:15px;" name="btnParent" ng-click="btnParent(childParent.ID, childParent.ParentID)" data-category="{{childParent.ID}}" data-parent="{{childParent.ParentID}}">{{childParent.NameVN}}</a>
                                </li>
                            </ul>
                        </li>
                    }
                    else
                    {
                        <li ng-repeat="parent in parentCategory" ng-if="parent.ParentID == 0">
                            <a class="hov1 stext-106 m-r-20" style="font-size:18px;" name="btnParent" ng-click="btnParent(parent.ID, parent.ParentID)" data-category="{{parent.ID}}" data-parent="{{parent.ParentID}}">{{parent.Name}}</a>
                            <ul class="sub-menu">
                                <li class="active-menu" ng-repeat="childParent in parentCategory" ng-if="childParent.ParentID==parent.ID">
                                    <a class="hov1 stext-106 m-r-20" style="font-size:15px;" name="btnParent" ng-click="btnParent(childParent.ID, childParent.ParentID)" data-category="{{childParent.ID}}" data-parent="{{childParent.ParentID}}">{{childParent.Name}}</a>
                                </li>
                            </ul>
                        </li>
                    }
                }
            </ul>
        </div>

        <div class="flex-w flex-c-m m-tb-10">
            <div class="flex-c-m stext-106 cl6 size-104 bor4 pointer hov-btn3 trans-04 m-r-8 m-tb-4 js-show-filter">
                <i class="icon-filter cl2 m-r-6 fs-15 trans-04 zmdi zmdi-filter-list"></i>
                <i class="icon-close-filter cl2 m-r-6 fs-15 trans-04 zmdi zmdi-close dis-none"></i>
                Filter
            </div>

            <div class="flex-c-m stext-106 cl6 size-105 bor4 pointer hov-btn3 trans-04 m-tb-4 js-show-search">
                <i class="icon-search cl2 m-r-6 fs-15 trans-04 zmdi zmdi-search"></i>
                <i class="icon-close-search cl2 m-r-6 fs-15 trans-04 zmdi zmdi-close dis-none"></i>
                Search
            </div>
        </div>

        <!-- Search product -->
        <div class="dis-none panel-search w-full p-t-10 p-b-15">
            <div class="bor8 dis-flex p-l-15">
                <a class="size-113 flex-c-m fs-16 cl2 hov-cl1 trans-04">
                    <i class="zmdi zmdi-search"></i>
                </a>

                <input class="mtext-107 cl2 size-114 plh2 p-r-15" type="text" name="keyword" placeholder="Search" id="txt_Keyword">
            </div>
        </div>

        <!-- Filter -->
        <div class="dis-none panel-filter w-full p-t-10">
            <div class="wrap-filter flex-w bg6 w-full p-lr-40 p-t-27 p-lr-15-sm">
                <div class="filter-col1 p-r-15 p-b-27">
                    <div class="mtext-102 cl2 p-b-15">
                        Sort By
                    </div>

                    <ul id="sort-by">
                        <li class="p-b-6">
                            <a class="filter-link stext-106 trans-04" data-row-1="1">
                                Default
                            </a>
                        </li>

                        <li class="p-b-6">
                            <a class="filter-link stext-106 trans-04" data-row-1="2">
                                Popularity
                            </a>
                        </li>

                        <li class="p-b-6">
                            <a class="filter-link stext-106 trans-04" data-row-1="3">
                                Average rating
                            </a>
                        </li>

                        <li class="p-b-6">
                            <a class="filter-link stext-106 trans-04" data-row-1="4">
                                Newness
                            </a>
                        </li>

                        <li class="p-b-6">
                            <a class="filter-link stext-106 trans-04" data-row-1="5">
                                Price: Low to High
                            </a>
                        </li>

                        <li class="p-b-6">
                            <a class="filter-link stext-106 trans-04" data-row-1="6">
                                Price: High to Low
                            </a>
                        </li>
                    </ul>
                </div>

                <div class="filter-col2 p-r-15 p-b-27">
                    <div class="mtext-102 cl2 p-b-15">
                        Price
                    </div>

                    <ul id="sort-price">
                        <li class="p-b-6">
                            <a class="filter-link stext-106 trans-04" data-row-2="0">
                                All
                            </a>
                        </li>

                        <li class="p-b-6">
                            <a class="filter-link stext-106 trans-04" data-row-2="1">
                                $0.00 - $50.00
                            </a>
                        </li>

                        <li class="p-b-6">
                            <a class="filter-link stext-106 trans-04" data-row-2="2">
                                $50.00 - $100.00
                            </a>
                        </li>

                        <li class="p-b-6">
                            <a class="filter-link stext-106 trans-04" data-row-2="3">
                                $100.00 - $150.00
                            </a>
                        </li>

                        <li class="p-b-6">
                            <a class="filter-link stext-106 trans-04" data-row-2="4">
                                $150.00 - $200.00
                            </a>
                        </li>

                        <li class="p-b-6">
                            <a class="filter-link stext-106 trans-04" data-row-2="5">
                                $200.00+
                            </a>
                        </li>
                    </ul>
                </div>

                <div class="filter-col3 p-r-15 p-b-27">
                    <div class="mtext-102 cl2 p-b-15">
                        Color
                    </div>

                    <ul id="sort-color">
                        <li ng-repeat="c in listColors" class="p-b-6">
                            <span class="fs-15 lh-12 m-r-6 {{c.Name}}">
                                <i class="zmdi zmdi-circle"></i>
                            </span>

                            <a class="filter-link stext-106 trans-04" data-row-3="{{c.ID}}" ng-click="btnColor($index, $event, c.ID)">
                                {{c.Name}}
                            </a>
                        </li>
                    </ul>
                </div>

                <div class="filter-col4 p-b-27">
                    <div class="mtext-102 cl2 p-b-15">
                        Tags
                    </div>

                    <div class="flex-w p-t-4 m-r--5">
                        <a ng-repeat="pc in postCategories" class="flex-c-m stext-107 cl6 size-301 bor7 p-lr-15 hov-tag1 trans-04 m-r-5 m-b-5" data-row-4="{{pc.ID}}">
                            {{pc.Name}}
                        </a>
                    </div>
                    <br />
                    <button class="btn btn-info size-105" id="btnSearch">Search</button>
                </div>
            </div>
        </div>
    </div>

    <div class="row product-grid">
        <div class="col-xs-6 col-sm-3 col-md-3" ng-repeat="p in products">
            <div class="block2-pic hov-img0">
                <img ng-src="{{p.Image}}" alt="IMG-PRODUCT">
                <a href="/Client/Details/{{p.ID}}" data-id="{{p.ID}}" class="block2-btn flex-c-m stext-103 cl2 size-102 bg0 bor2 hov-btn1 p-lr-15 trans-04 js-show-modal">
                    Quick View
                </a>
            </div>
            <div class="block2-txt flex-w flex-t p-t-14" style="margin-bottom:40px;">
                <div class="block2-txt-child1 flex-col-l">
                    <a href="product-detail.html" class="stext-104 cl4 hov-cl1 trans-04 js-name-b2 p-b-6">
                        {{p.Name}}
                    </a>

                    <span class="stext-105 cl3">
                        <span style="text-decoration:line-through">${{p.Price}}</span> - ${{(p.Price - (p.Price * p.PromotionPrice)/100)}} vnđ
                    </span>
                </div>

                @*<div class="block2-txt-child2 flex-r p-t-3">
                    <a href="#" class="btn-addwish-b2 dis-block pos-relative js-addwish-b2">
                        <img class="icon-heart1 dis-block trans-04" src="~/img/client/icons/icon-heart-01.png" alt="ICON">
                        <img class="icon-heart2 dis-block trans-04 ab-t-l" src="~/img/client/icons/icon-heart-02.png" alt="ICON">
                    </a>
                </div>*@
            </div>

            <div id="imgSale">
                <img ng-show="p.PromotionPrice > 0" src="~/img/client/icons/sale.png" />
            </div>
        </div>
        <input style="display:none" type="text" value="8" id="txt_PageSize" />
        <input style="display:none" type="text" value="0" id="txt_Parent" />
        <input style="display:none" type="text" value="0" id="txt_Category" />
    </div>

    <!-- Load more -->
    <div class="flex-c-m flex-w w-full p-t-45" style="padding-top:0px;margin-bottom:50px;">
        <button class="flex-c-m stext-101 cl5 size-103 bg2 bor1 hov-btn1 p-lr-15 trans-04" id="btnLoadMoreProduct">
            Load More
        </button>
    </div>
</div>