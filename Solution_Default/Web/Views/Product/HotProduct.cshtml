@if (Model != null)
{
    <!-- Related Products -->
    <section class="sec-relate-product bg0 p-t-45 p-b-105">
        <div class="container">
            <div class="p-b-45">
                <h3 class="ltext-106 cl5 txt-center">
                    Hot Products
                </h3>
            </div>

            <!-- Slide2 -->
            <div class="wrap-slick2">
                <div class="slick2">

                    @foreach (var p in Model)
                    {
                    <div class="item-slick2 p-l-15 p-r-15 p-t-15 p-b-15">
                        <!-- Block2 -->
                        <div class="block2">
                            <div class="block2-pic hov-img0">
                                <img src="@p.Image" alt="IMG-PRODUCT">

                                <a href="/Product/Details/@p.ID" data-id="p.ID" class="block2-btn flex-c-m stext-103 cl2 size-102 bg0 bor2 hov-btn1 p-lr-15 trans-04 js-show-modal">
                                    Quick View
                                </a>
                            </div>

                            <div class="block2-txt flex-w flex-t p-t-14">
                                <div class="block2-txt-child1 flex-col-l ">
                                    <a href="product-detail.html" class="stext-104 cl4 hov-cl1 trans-04 js-name-b2 p-b-6">
                                        @p.Name
                                    </a>

                                    @if (Request.Cookies["Lang"] != null && Request.Cookies["Lang"].Value == "vi")
                                    {
                                        if (p.PromotionPrice > 0)
                                        {
                                            <span class="stext-105 cl3">
                                                <span style="text-decoration:line-through">@string.Format("{0:#,##0}", p.PriceVN) vnđ</span> - @string.Format("{0:#,##0}", p.PriceVN - (p.PriceVN * p.PromotionPrice) / 100) vnđ
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="stext-105 cl3">
                                                @string.Format("{0:#,##0}", p.PriceVN) vnđ
                                            </span>
                                        }
                                    }
                                    else
                                    {
                                        if (p.PromotionPrice > 0)
                                        {
                                            <span class="stext-105 cl3">
                                                <span style="text-decoration:line-through">$@string.Format("{0:#,##0}", p.Price)</span> - $@string.Format("{0:#,##0}", p.Price - (p.Price * p.PromotionPrice) / 100)
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="stext-105 cl3">
                                                $@string.Format("{0:#,##0}", p.Price)
                                            </span>
                                        }
                                    }

                                </div>

                            </div>
                        </div>
                        @if (int.Parse(p.PromotionPrice.ToString()) == 0 && p.HotFlag == true)
                        {
                            <span class="hot-product-icon">Hot</span>
                        }
                        else
                        {
                            <span ng-show="@int.Parse(p.PromotionPrice.ToString()) > 0" class="sale">@p.PromotionPrice%</span>
                        }
                    </div>
                    }
                </div>
            </div>
        </div>
    </section>
}