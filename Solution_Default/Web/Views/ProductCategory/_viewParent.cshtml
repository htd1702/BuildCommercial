<div class="sec-banner bg0">
    <div class="flex-w flex-c-m">
        @foreach (var c in ViewBag.ListCategory)
        {
            string year = c.CreatedDate.Year.ToString();
            <div class="size-202 m-lr-auto respon4">
                <!-- Block1 -->
                <div class="block1 wrap-pic-w">
                    <img src="@c.Image" alt="IMG-BANNER">

                    <a href="/product-category/@c.ID" class="block1-txt ab-t-l s-full flex-col-l-sb p-lr-38 p-tb-34 trans-03 respon3">
                        <div class="block1-txt-child1 flex-col-l">
                            <span class="block1-name ltext-102 trans-04 p-b-8">
                              
                            </span>
                        </div>

                        <div class="block1-txt-child2 p-b-4 trans-05">
                            <div class="block1-link stext-101 cl0 trans-09" style="font-size:22px;">
                                @(Request.Cookies["Lang"] != null && Request.Cookies["Lang"].Value == "vi" ? c.NameVN : c.Name)
                            </div>
                        </div>
                    </a>
                </div>
            </div>
        }
    </div>
</div>